# LINE Bot credentials (from LINE Developers Console)
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# AI Provider — ลำดับ: GEMINI_API_KEY → OLLAMA_MODEL → ANTHROPIC_API_KEY
# ใส่ key ตัวไหน = ใช้ provider นั้น

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash

# Gemini TTS (Text-to-Speech) — ต้องใช้ TTS-specific model
#GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts

# Ollama (local AI)
#OLLAMA_BASE_URL=http://localhost:11434
#OLLAMA_MODEL=glm-4.7-flash
# Anthropic
#ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenRouter
#OPENROUTER_API_KEY=your_openrouter_api_key

# Web Search — provider: gemini (default), brave, perplexity, grok
#WEB_SEARCH_PROVIDER=gemini
#BRAVE_API_KEY=
#PERPLEXITY_API_KEY=
#XAI_API_KEY=

# Google APIs (Gmail, Calendar, Drive, Sheets)
# Per-user OAuth: แต่ละ LINE user ผูก Google Account ผ่าน wizard (/google/setup)
# ต้องการแค่ Client ID + Secret (สร้างจาก Google Cloud Console → APIs & Services → Credentials → OAuth 2.0 Client ID → Desktop app)
# GOOGLE_REFRESH_TOKEN เป็น optional fallback (shared token สำหรับทุก user)
#GOOGLE_CLIENT_ID=your_google_client_id
#GOOGLE_CLIENT_SECRET=your_google_client_secret
#GOOGLE_REFRESH_TOKEN=                              # optional fallback

# Token encryption key (เข้ารหัส Google tokens ใน DB)
# ถ้าไม่ใส่ = auto-derive จาก LINE_CHANNEL_SECRET (dev mode)
#TOKEN_ENCRYPTION_KEY=your-random-secret-key

# Server
PORT=3000
DATA_DIR=./data

# Base URL — public URL ของ server (สำหรับ TTS audio files)
# ถ้าไม่ใส่ = auto-detect จาก webhook request (ทำงานกับ ngrok อัตโนมัติ)
#BASE_URL=https://your-server.com
